        "@types/node": "^10.12.9",
        "ava": "^1.0.1",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
        "inspect-process": "^0.5.0",
        "mini-css-extract-plugin": "^0.8.0",
        "nodemon": "^1.18.7",
        "parcel-bundler": "^1.12.4",
        "raw-loader": "^3.1.0",
        "style-loader": "^1.0.0",
        "typescript": "^3.7.2",
        "webpack": "^4.25.1",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.1.2",
