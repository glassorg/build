{
    "name": "@glas/build",
    "version": "0.2.3",
    "bin": {
        "guild": "./bin/guild.js"
    },
    "scripts": {
        "clean": "rm -rf lib && rm -rf node_modules && yarn unlink",
        "setup": "yarn install && yarn run build && ( yarn unlink ; yarn link )",
